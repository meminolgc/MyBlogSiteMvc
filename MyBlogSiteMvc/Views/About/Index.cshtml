@model IEnumerable<EntityLayer.Concrete.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url(https://enwpgo.wordpress.com/wp-content/uploads/2022/10/aboutus-aboutme.jpg);">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Hakkımızda</h1>
                    <p class="lead mb-4 text-white">Sizler için yüzlerce blog yazan yazarlarımızı ve ekibimizi daha yakından tanımak ister misiniz?</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 order-md-2">
                    <img src="@item.AboutImage1" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 mr-auto order-md-1">
                    <h2>Biz Kimiz</h2>
                    <p>@item.AboutContent1</p>
                    <ul class="ul-check list-unstyled success">
                        <li>Güncel konular</li>
                        <li>15'ten fazla kategori</li>
                        <li>21 farklı dinamik yazar</li>
                        <li>Günlük 45000 tekil okunma</li>
                        <li>27 farklı ülkeden takipçi</li>
                        <li>Sosyal medyada 325k abone</li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>

@Html.Action("MeetTheTeam", "About")

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <img src="@item.AboutImage2" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 ml-auto">
                    <h2>Ekibimiz</h2>
                    <p class="mb-4">@item.AboutContent2</p>
                    <ul class="ul-check list-unstyled success">
                        <li>Teknoloji</li>
                        <li>Sağlık ve İyi Hissetme</li>
                        <li>Seyahat ve Keşif</li>
                        <li>Yazılım</li>
                        <li>Kültür ve Sanat</li>
                        <li>Yemek ve Mutfak</li>
                        <li>Moda ve Stil</li>
                        <li>Finans ve İş Dünyası</li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>

